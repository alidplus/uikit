7.1 BASIC FORM
-------------

import { Input, Button, Checkbox } from '@alidplus/uikit';

function LoginForm() {
  return (
    <form>
      <Input
        label="Email"
        type="email"
        placeholder="Enter your email"
        required
      />
      <Input
        label="Password"
        type="password"
        placeholder="Enter your password"
        required
      />
      <Checkbox label="Remember me" />
      <Button variant="primary" block>
        Sign In
      </Button>
    </form>
  );
}

7.2 CARD WITH ACTIONS
--------------------

import { Card, Button, Badge } from '@alidplus/uikit';

function ProductCard() {
  return (
    <Card>
      <h3>Product Name</h3>
      <Badge variant="brand">New</Badge>
      <p>Product description</p>
      <Button variant="primary">Add to Cart</Button>
