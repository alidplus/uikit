}

7.4 DROPDOWN SELECTION
---------------------

import { Dropdown } from '@alidplus/uikit';
import { Icon1, Icon2 } from '@alidplus/uikit/icons';

function CountrySelector() {
  const countries = [
    { id: 'us', label: 'United States', icon: <Icon1 /> },
    { id: 'uk', label: 'United Kingdom', icon: <Icon2 /> },
  ];

  return (
    <Dropdown
      label="Select Country"
      placeholder="Choose a country"
      options={countries}
      onChange={(value) => console.log('Selected:', value)}
    />
  );
}

7.5 PAGINATION
------------

import { Pagination } from '@alidplus/uikit';

function DataTable() {
  const [page, setPage] = useState(1);

  return (
    <div>
      {/* Table content */}
      <Pagination
        currentPage={page}
        totalPages={10}
        onPageChange={setPage}
        type="page-default"
        shape="circle"
      />
    </div>
  );
}

7.6 DARK MODE
------------

To enable dark mode, add data-theme="dark" to your root element:

<html data-theme="dark">
  <body>
    {/* Your app */}
  </body>
</html>

Or toggle dynamically:
document.documentElement.setAttribute('data-theme', 'dark');

